{
  "extends": "google",
  "plugins": [
    "header"
  ],
  "rules": {
    "semi": [
      "error",
      "always"
    ],
    "quotes": [
      "error",
      "double"
    ],
    "max-len": [
      "error",
      {
        "code": 180
      }
    ],
    "header/header": [
      "error",
      "copyright.js"
    ],
    "no-invalid-this": "off",
    "prefer-rest-params": "off",
    "prefer-spread": "off",
    "linebreak-style": [0 ,"error", "windows"]
  },
  "parserOptions": {
    "ecmaVersion": 2017
  }
}
